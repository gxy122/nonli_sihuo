page{
  background: #f7f7f7;
}
.header{
  top:0;
  left:0;
  position: fixed;
  width:100%;
  z-index: 20;
  background-size: 100% auto;
  background-position: left top;
}
.bigTop{
  background-repeat: no-repeat;
  background-position:center;
  background-size:cover;
}
.bigTitle{
  padding-left:30rpx;
  font-size: 34rpx;
  color:#fff;
  display: flex;
  align-items: center;
}
.searchBox{
  padding:20rpx 35rpx 0;
}
.search{
  padding:0 30rpx;
  height:60rpx;
  width:620rpx;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  justify-content: space-between;
  background: rgba(255,255,255,0.93);
}
.search image{
  width:31rpx;
  height:31rpx;
}
.search input{
  width:562rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color:#333;
}
.banner{
  padding:32rpx 35rpx 44rpx;
  position: relative;
}
.banner swiper{
  height:302rpx;
  border-radius: 40rpx;
  overflow: hidden;
  box-shadow: 0px 0px 22px 0px 
		rgba(7, 1, 2, 0.18);
}
.banner image{
  width:100%;
  display: block;
}
.banner .indicator{
  width:100%;
  left:0;
  height:7rpx;
  bottom:17rpx;
  text-align: center;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner .indicatorLi{
  width: 45rpx;
  height: 7rpx;
	background-color: #ffffff;
  opacity: 0.9;
  margin:0 5rpx;
  border-radius: 3rpx;
}
.banner .indicatorLi.on{
  background-color: #e4c94d;
}
.indexNav{
  padding:46rpx 0 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.indexNav .li{
  width:25%;
  display: flex;
  font-size: 26rpx;
  flex-direction: column;
  align-items: center;
  margin:0 0 32rpx;
}
.indexNav image{
  width:62rpx;
  height: 66rpx;
}
.indexNav .h3{
  line-height: 58rpx;
  height: 58rpx;
  color:#333;
}

.tow{
  padding:0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tow .li{
  width:276rpx;
  height: 123rpx;
  display: flex;
  font-size: 26rpx;
  line-height: 36rpx;
  align-items: center;
  justify-content: space-between;
	background-color: #ffffff;
  padding:0 30rpx 0 32rpx;
	box-shadow: 0rpx 0rpx 22rpx 0rpx 
		rgba(7, 1, 2, 0.18);
}
.tow .li .text{
  width:190rpx;
}
.tow .li .num{
  width: 72rpx;
  text-align: center;
  font-size: 65rpx;
  color:#e77631;
}
.tow .li:nth-child(2) .num{
  color:#f1b42f;
}


.tuijianTitle{
  height:90rpx;
  display: flex;
  font-size: 34rpx;
  color:#333;
  align-items: center;
  padding:20rpx 30rpx 0;
}
.tuijianTitle image{
  width:47rpx;
  height:30rpx;
  margin:0 20rpx 0 0;
}
.tuijianLi{
  background: #fff;
  margin:0 0 6rpx;
  padding:38rpx 32rpx 36rpx;
  box-shadow: 0rpx 0rpx 22rpx 0rpx 
		rgba(7, 1, 2, 0.18);
}
.tuijianLi .liTop{
  display: flex;
  position: relative;
  justify-content: space-between;
}
.tuijianLi .jian{
  width: 42rpx;
  height: 42rpx;
  top: 0;
  right: 0;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 42rpx;
  position: absolute;
  border-radius: 50%;
	background-color: #e77631;
}
.tuijianLi .pic{
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.tuijianLi .pic image{
  width:100%;
}
.tuijianLi .pic .bq{
  width:62rpx;
  height:32rpx;
  color:#fff;
  top:2rpx;
  right:0;
  position: absolute;
  font-size: 20rpx;
  text-align: center;
  line-height: 32rpx;
  padding:2rpx 10rpx 0;
  background-repeat: no-repeat;
  background-size: cover;
  background-position:center;
}
.tuijianLi .text{
  width:550rpx;
  font-size: 26rpx;
  color: #909090;
  line-height: 38rpx;
}
.tuijianLi .h3{
  font-size: 30rpx;
  color:#333;
  line-height: 30rpx;
  height: 40rpx;
}
.tuijianLi .bot{
  padding:17rpx 0 0;
  display: flex;
  flex-wrap: wrap;
}
.tuijianLi .bot .span{
  padding:0 20rpx;
  height:40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color:#4ec4b8;
  border-radius: 20rpx;
  margin:0 12rpx 0 0;
  background:rgba(78,196,184,0.15);
}
.tuijianLi .bot .span:nth-child(2){
  color:#4bad30;
  background:rgba(106,221,75,0.15);
}
.tuijianLi .bot .span:nth-child(3){
  color:#dd9a0b;
  background:rgba(238,470,22,0.15);
}
.tuijianLi .bot .span:nth-child(4){
  color:#e86516;
  background:rgba(244,106,23,0.15);
}
.tuijianLi .bot .span:nth-child(5){
  color:#fff;
  background:#218f70;
}